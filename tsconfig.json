{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": [
      "ES2017"
    ],
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./client/**/*.ts",
    "./server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/test/**"
  ]
}